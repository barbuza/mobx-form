{
  "name": "@barbuza/mobx-form",
  "version": "0.1.8",
  "main": "lib/index.js",
  "license": "MIT",
  "scripts": {
    "prepublish": "in-publish && npm-run-all lint test build || not-in-publish",
    "test": "jest --coverage",
    "lint": "tslint -p tsconfig.json",
    "start": "jest --watch",
    "build": "rimraf lib && tsc && rimraf lib/__tests__"
  },
  "devDependencies": {
    "@types/enzyme": "^2.7.9",
    "@types/jest": "^19.2.2",
    "@types/react": "15.0.22",
    "coveralls": "^2.13.0",
    "enzyme": "^2.8.2",
    "in-publish": "^2.0.0",
    "jest": "^19.0.2",
    "jest-enzyme": "^3.0.1",
    "npm-run-all": "^4.0.2",
    "react-addons-test-utils": "^15.5.1",
    "react-dom": "^15.5.4",
    "rimraf": "^2.6.1",
    "ts-jest": "^19.0.13",
    "tslint": "^5.1.0",
    "typescript": "^2.2.2"
  },
  "peerDependencies": {
    "react": "*",
    "mobx": "*",
    "mobx-react": "*"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testResultsProcessor": "<rootDir>/node_modules/ts-jest/coverageprocessor.js",
    "testRegex": "/__tests__/[^/]+-test\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "tsx"
    ],
    "setupTestFrameworkScriptFile": "./node_modules/jest-enzyme/lib/index.js",
    "collectCoverageFrom": [
      "src/**/*.ts",
      "src/**/*.tsx",
      "!src/__tests__/**/*.ts",
      "!src/__tests__/**/*.tsx"
    ]
  }
}
